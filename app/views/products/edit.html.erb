<h1>Update <%= @product.name %></h1>

<%= form_for @product do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <%= f.label :price %>
  <%= f.number_field :price, step: :any %>
  <%= f.label :image %>
  <%= f.text_field :image %>
  <%= f.submit "Submit" %>
<% end %>
