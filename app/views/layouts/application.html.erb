<!DOCTYPE html>
<html>
  <head>
    <title>Week3CodeReview</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <nav>
    <div class="nav-wrapper">
      <% if current_user != nil && current_user.admin %>
      <ul id="nav-mobile" class="left hide-on-med-and-down">
        <li>Admin:</li>
        <li><%= link_to 'New Product', new_product_path %></li>
      </ul>
      <% end %>
      <ul id="nav-mobile" class="right hide-on-med-and-down">
        <li id="cart_items"><%= render('layouts/cart_total') %></li>
        <li><%= link_to "See all products", products_path %></li>
        <% if current_user %>
          <li><%= current_user.email %></li>
          <li><%= link_to "Sign out", '/sign_out' %></li>
        <% else %>
          <li><%= link_to "Sign up", 'sign_up' %></li>
          <li><%= link_to "Sign in", '/sign_in' %></li>
        <% end %>
      </ul>
    </div>
  </nav>

  <body>
    <div class="flash">
      <%= render 'layouts/flash'%>
    </div>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
